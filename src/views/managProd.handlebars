<div>
    <h1>
        Lista dee productos registrados
    </h1>
    <div>
  <div>Título</div>
  <div>Descripción</div>
  <div>Precio</div>
  <div>Stock</div>
  <div>Thumbnail</div>
  <div>Dueño</div>
</div>
{{#each products}}

  <div>
    <form action="/api/products/update/{{this._id}}?_method=PUT" method="POST">
      <input type="hidden" name="_method" value="PUT" />
      <input type="text" name="name" value="{{this.name}}" />
      <input type="text" name="description" value="{{this.description}}" />
      <input type="number" name="price" value="{{this.price}}" />
      <input type="number" name="stock" value="{{this.stock}}" />
      <input type="text" name="thumbnail" value="{{this.thumbnail}}" />
      <input type="text" name="owner" value="{{this.owner}}" />
      <button type="submit">Actualizar</button>
    </form>

    <form action="/api/products/delete/{{this._id}}?_method=DELETE" method="POST">
      <input type="hidden" name="_method" value="DELETE" />
      <button type="submit">Eliminar</button>
    </form>
  </div>

{{/each}}

</div>